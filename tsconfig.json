{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["ESNext"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ESNext",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": false,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "dist"]
}
